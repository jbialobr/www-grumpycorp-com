{
  "name": "www-grumpycorp-com",
  "private": true,
  "description": "GrumpyCorp Creative Industries",
  "version": "0.1.0",
  "author": "Robin Giese <robin@grumpycorp.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/rgiese/www-grumpycorp-com"
  },
  "dependencies": {
    "@mdx-js/mdx": "^0.16.8",
    "@mdx-js/tag": "^0.16.8",
    "@types/react": "^16.7.22",
    "@types/react-dom": "^16.0.11",
    "@types/react-helmet": "^5.0.8",
    "cross-var": "^1.1.0",
    "gatsby": "^2.0.107",
    "gatsby-image": "^2.0.29",
    "gatsby-mdx": "^0.3.5",
    "gatsby-plugin-react-helmet": "^3.0.5",
    "gatsby-plugin-sass": "^2.0.10",
    "gatsby-plugin-sharp": "^2.0.19",
    "gatsby-plugin-typescript": "^2.0.4",
    "gatsby-plugin-typescript-checker": "^1.0.3",
    "gatsby-plugin-web-font-loader": "^1.0.4",
    "gatsby-remark-images": "^3.0.3",
    "gatsby-source-filesystem": "^2.0.19",
    "gatsby-transformer-remark": "^2.2.3",
    "gatsby-transformer-sharp": "^2.1.13",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.1",
    "node-sass": "^4.11.0",
    "prettier": "1.16.3",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-helmet": "^5.2.0",
    "svg-sprite-loader": "^4.1.3",
    "svgo-loader": "^2.2.0",
    "tachyons": "^4.11.1",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.1"
  },
  "config": {
    "prettierglob": "{.,./src/**}/*.{css,js,jsx,json,ts,tsx}"
  },
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "ts:check": "tsc --noEmit",
    "ts:lint": "tslint --project .",
    "format:check": "cross-var prettier --check $npm_package_config_prettierglob",
    "format:fix": "cross-var prettier --write $npm_package_config_prettierglob"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run ts:check && npm run ts:lint"
    }
  },
  "lint-staged": {
    "*.{css,js,jsx,json,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
